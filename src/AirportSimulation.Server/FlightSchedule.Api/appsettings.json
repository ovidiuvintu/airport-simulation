{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Your ASP.NET Core App"
    }
  },
  "OpenApi": {
    "Endpoint": {
      "Name": "FlightSchedule.API V1"
    },
    "Document": {
      "Description": "The FlightSchedule Microservice HTTP API.",
      "Title": "eFly - FlightSchedule HTTP API",
      "Version": "v1"
    }
  },
  "ConnectionStrings": {
    "FlightScheduleDb": "Data source=Data/flightschedule.db"
  },

  "AllowedHosts": "*"

}
